{
    "system": {
        "name": "Kimera SWM System",
        "version": "3.0.0",
        "environment": "development",
        "debug_mode": true,
        "log_level": "INFO"
    },
    "initialization": {
        "lazy_loading": true,
        "parallel_init": true,
        "max_init_threads": 4,
        "timeout_seconds": 300,
        "retry_attempts": 3
    },
    "components": {
        "core_system": {
            "enabled": true,
            "priority": 1,
            "dependencies": []
        },
        "gpu_system": {
            "enabled": true,
            "priority": 2,
            "dependencies": ["core_system"],
            "fallback_to_cpu": true
        },
        "database_systems": {
            "enabled": true,
            "priority": 3,
            "dependencies": ["core_system"],
            "required_services": ["postgresql", "neo4j", "redis"]
        },
        "cognitive_engines": {
            "enabled": true,
            "priority": 4,
            "dependencies": ["core_system", "gpu_system", "database_systems"],
            "load_on_demand": true
        }
    },
    "health_monitoring": {
        "enabled": true,
        "check_interval_seconds": 30,
        "alert_on_failures": true,
        "auto_recovery": true
    },
    "security": {
        "validate_components": true,
        "encryption_enabled": true,
        "secure_communication": true
    }
}
